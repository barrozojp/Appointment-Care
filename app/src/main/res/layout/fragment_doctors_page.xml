<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DoctorsPageFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ltAnimation"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/greenline_animation" />

            <androidx.cardview.widget.CardView
                android:id="@+id/drpageCard"
                android:layout_width="0dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#FCFFF9"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                app:layout_constraintBottom_toBottomOf="@id/ltAnimation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.028">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_greeting"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Good Day User!"
                            android:textAlignment="center"
                            android:textColor="#007E85"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_num_visits"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Visits for Today :"
                            android:textAlignment="center"
                            android:layout_below="@id/tv_greeting"
                            android:textColor="#007E85"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/num_visits"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/tv_num_visits"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_background_home"
                            android:gravity="center"
                            android:text="(Amount)"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/new_patients"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/num_visits"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/baseline_people_alt_24"
                            android:drawablePadding="5dp"
                            android:text="New Patients: (Num)"
                            android:textAlignment="center"
                            android:textColor="#007E85"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/old_patients"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/new_patients"
                            android:drawableLeft="@drawable/baseline_people_alt_24"
                            android:drawablePadding="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Old Patients: (Num)"
                            android:textAlignment="center"
                            android:textColor="#007E85"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_gravity="right"
                        android:src="@drawable/baseline_account_circle_24" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/pending_appoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FCFFF9"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                app:layout_constraintTop_toBottomOf="@id/drpageCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:text="Pending Appoinments"
                    android:textAlignment="center"
                    android:textColor="#007E85"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor_patients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#FCFFF9"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pending_appoints">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#007E85"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="100dp"
                    android:text="Patients" />

            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>