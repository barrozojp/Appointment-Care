<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Register"
    android:background="#fff">

  <ImageView
      android:id="@+id/img_logo_register"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/splashscreenlogo"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="30dp"
      />

  <TextView
      android:id="@+id/registerTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/img_logo_register"
      android:text="@string/register_title"
      android:textAlignment="center"
      android:textSize="40sp"
      android:textStyle="bold"
      android:textColor="#6EAB36"
      />

  <Button
      android:id="@+id/btn_RegDoctor"
      android:layout_width="350dp"
      android:layout_height="80dp"
      android:layout_below="@id/registerTitle"
      android:layout_centerInParent="true"
      android:layout_marginTop="80dp"
      android:backgroundTint="#007E85"
      android:text="@string/register_as_doctor"
      android:textColor="#FFF"
      android:textSize="20sp" />
  <TextView
      android:id="@+id/orText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/btn_RegDoctor"
      android:text="@string/or_signInRegister"
      android:textColor="#007E85"
      android:textAlignment="center"/>

  <Button
      android:id="@+id/btn_RegPatient"
      android:layout_width="350dp"
      android:layout_height="80dp"
      android:layout_below="@id/btn_RegDoctor"
      android:layout_centerInParent="true"
      android:layout_marginTop="20dp"
      android:backgroundTint="#007E85"
      android:text="@string/register_as_patient"
      android:textColor="#FFF"
      android:textSize="20sp" />
  <TextView
      android:id="@+id/alreadyhaveaccount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/btn_RegPatient"
      android:layout_marginTop="100dp"
      android:text="@string/already_have_an_account"
      android:textAlignment="center"
      android:textSize="16sp"
      android:textColor="#007E85"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/alreadyhaveaccount"
      android:text="@string/log_in_register"
      android:layout_marginTop="25dp"
      android:textSize="25sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:textColor="#007E85"/>

  </RelativeLayout>